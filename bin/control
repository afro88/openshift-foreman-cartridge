#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

FOREMAN_PID_FILE=${OPENSHIFT_FOREMAN_RUN_DIR}/foreman.pid

function isrunning() {
  if [ -f "$FOREMAN_PID_FILE" ]; then
    pid=$(cat $FOREMAN_PID_FILE);
    if /bin/ps --pid $pid 1>&2 >/dev/null; then
      return 0
    fi
  fi

  return 1
}

function start() {
  client_result "Starting Foreman cartridge"
  
  if isrunning; then
    client_error "Foreman is already running"
  elif [ ! -f $OPENSHIFT_REPO_DIR/Procfile ]; then
    client_error "Procfile not found"
  else
    pushd ${OPENSHIFT_FOREMAN_DIR} > /dev/null
    bundle exec foreman start > $OPENSHIFT_FOREMAN_LOG_DIR/foreman.log 2>&1 &
    pid=$!
    echo "$pid" > $FOREMAN_PID_FILE
    popd > /dev/null
  fi
}

function stop() {
  client_result "Stopping Foreman cartridge"
  if isrunning; then
    if [ -f "$FOREMAN_PID_FILE" ]; then
      pid=$(cat $FOREMAN_PID_FILE);
      client_result "Sending SIGTERM to foreman:$pid ..."
      kill -TERM $pid
    else
      client_result "Failed to locate Foreman pid file"
    fi
  fi
}

function restart() {
  client_result "Restarting Foreman cartridge"
  stop
  start
}

function reload() {
  client_result "Reloading Foreman cartridge"
  restart
}

function status() {
  client_result "TODO"
}


case "$1" in
  start) start ;;
  stop)  stop ;;
  restart) restart ;;
  reload) reload ;;
  status) status ;;
  *) exit 0
esac
